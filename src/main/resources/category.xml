<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="tsymbaliuk.model.Category" table="categories">
        <meta attribute="class-description">
            This class contains category's details.
        </meta>
        <id name="id" type="int" column="category_id">
            <generator class="native"/>
        </id>
        <property name="title" column="title" type="string"/>
        <property name="description" column="description" type="string"/>
        
        <set name="products" table="products">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <one-to-many node="products" class="tsymbaliuk.model.Product"/>
        </set>


    </class>
</hibernate-mapping>