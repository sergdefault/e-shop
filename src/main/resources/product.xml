<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="tsymbaliuk.model.Product" table="product">
        <meta attribute="class-description">
            This class contains category's details.
        </meta>
        <id name="id" type="int" column="product_id">
            <generator class="native"/>
        </id>
        <property name="description" column="description" type="string"/>
        <property name="title" column="title" type="string"/>
        <property name="shortDescription" column="shortDescription" type="string"/>
        <property name="price" column="price" type="float"/>

        <many-to-one name="category" class="tsymbaliuk.model.Category">
            <column name="category_id" not-null="true"></column>
        </many-to-one>
</class>
</hibernate-mapping>